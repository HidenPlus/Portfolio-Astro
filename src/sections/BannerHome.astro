---
import Photo from "../components/Photo.astro";
import MouseScroll from "../components/MouseScroll.astro";
---

<section class="banner-section">
    <div class="banner">
        <p class="banner__intro">Hello! I am</p>
        <p class="banner__name">Yojhan Atuesta</p>
        <p class="banner__role">Web Developer</p>
        <p class="banner__desc">
            I am a tech enthusiast based in Bogot√°, Colombia, I specialize in
            Shopify, focusing on custom theme development, performance
            optimization, and advanced customizations. I have a strong
            understanding of both frontend and backend architectures, delivering
            scalable and efficient solutions tailored to client needs.
        </p>
        <a target="_blank" class="btn" href="/cv-en.pdf"> DOWNLOAD MY CV </a>
    </div>
    <Photo />
    <div class="decorations">
        <div class="decoration-item decoration-item--1"></div>
        <div class="decoration-item decoration-item--2"></div>
    </div>
    <MouseScroll />
</section>

<script>
    $(document).ready(function () {
        // Add smooth scrolling to all links
        $("a").on("click", function (event) {
            // Make sure this.hash has a value before overriding default behavior
            if (this.hash !== "") {
                // Prevent default anchor click behavior
                event.preventDefault();

                // Store hash
                var hash = this.hash;

                // Using jQuery's animate() method to add smooth page scroll
                // The optional number (800) specifies the number of milliseconds it takes to scroll to the specified area
                $("html, body").animate(
                    {
                        scrollTop: $(hash).offset().top,
                    },
                    400,
                    function () {
                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    },
                );
            } // End if
        });
    });
</script>
<script
    is:inline
    src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
    type="text/javascript"></script>
<style is:inline>
    .banner-section {
        position: relative;
        display: grid;
        grid-template-columns: 2fr 0.5fr;
        padding: var(--sSpacingDesktop);
        justify-content: space-between;
        align-items: start;
        min-height: calc(100vh - 122px);
    }
    .banner-section .banner {
        position: relative;
        max-width: 800px;
        font-size: 28px;
        font-weight: 400;
        line-height: 150%;
        z-index: 1;

        .banner__intro {
            color: var(--secondaryColorGray);
        }
        .banner__name {
            color: var(--secondaryColorGreen);
        }
        .banner__role {
            color: var(--secondaryColorLightBlue);
        }
        .banner__desc {
            color: var(--white);
            line-height: 100%;
        }
        .btn {
            display: block;
            margin-top: var(--pSpacing);
        }
    }

    section .decorations {
        position: absolute;
        width: 100%;
        height: 100%;
        .decoration-item--1 {
            position: absolute;
            left: 0%;
            bottom: 30%;
        }
        .decoration-item--2 {
            position: absolute;
            right: 0%;
        }
    }
</style>
