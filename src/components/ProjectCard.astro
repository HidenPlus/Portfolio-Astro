---
const { title, image, imageAlt, stackList, description, url } = Astro.props;
---

<div class="project-card">
    <div class="image-container">
        <img src={image} alt={imageAlt} />
    </div>
    <div class="info-container">
        <h4>{title}</h4>
        <p class="stack-list"><span>Stack Used:</span> {stackList}</p>
        <p class="description">{description}</p>
        <a href={url} target="_blank" class="btn btn--secondary">
            <img src="/open_with.svg" alt={"Open " + title + " Project"} />
            VISIT
        </a>
    </div>
</div>

<style is:inline>
    .project-card {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 10px;

        .btn {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

        .image-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            width: 50%;
            aspect-ratio: 1/1;
            background-color: var(--secondaryColorBlue);
            padding: 8px;
            border-radius: 8px;
            border: 4px solid var(--primaryColorWhite);

            img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }
        }

        .info-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            gap: 10px;
            width: calc(50% - 10px);

            h4 {
                font-size: 20px;
                font-weight: 400;
                color: var(--primaryColorGreen);
            }

            .stack-list {
                font-size: 14px;
                font-weight: 400;
                color: var(--secondaryColorGray);

                span {
                    font-size: 16px;
                    color: var(--primaryColorGreen);
                }
            }

            .description {
                font-size: 14px;
                color: var(--secondaryColorLightBlue);
            }
        }
    }
</style>
