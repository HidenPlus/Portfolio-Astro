---
const { frontmatter } = Astro.props;
import GlobalStyles from "../components/GlobalStyles.astro";
import Header from "../components/Header.astro";
import SocialFixed from "../components/SocialFixed.astro";
import Footer from "../sections/Footer.astro";
import Article from "../components/Article.astro";
import "../styles/global.scss";
import "../styles/Article.scss";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no"
		/>
		<meta name="description" content={frontmatter.description} />
		<meta
			name="google-site-verification"
			content="Nf6PnEg1mEwzgKNMH5mXq4E9QEvobsh2IWfaibiUowo"
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Yojhan Atuesta - {frontmatter.title}</title>
		<GlobalStyles />
	</head>
	<body>
		<Header />
		<main class="article">
			<Article frontmatter={frontmatter}><slot /></Article>
		</main>
		<SocialFixed />
		<Footer />
		<script>
			import AOS from "aos";
			AOS.init();
		</script>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Yojhan",
				"jobTitle": "Frontend Developer focused on Shopify",
				"url": "https://yojhanatuesta.vercel.app/",
				"image": "https://yojhanatuesta.vercel.app/PHOTO.webp",
				"sameAs": [
					"https://www.linkedin.com/in/yojhanatuesta",
					"mailto:aatuesta00@gmail.com"
				],
				"worksFor": {
					"@type": "Organization",
					"name": "Freelance"
				},
				"knowsAbout": [
					"Shopify",
					"Liquid",
					"JavaScript",
					"CSS",
					"SEO",
					"Klaviyo"
				]
			}
		</script>
	</body>
</html>
